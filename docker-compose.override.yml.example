# docker-compose.override.yml.example
# Copy this file to docker-compose.override.yml for local development overrides
# This file is automatically loaded by docker-compose and will override base settings

services:
  api:
    # Override for local development
    environment:
      - DEBUG=true
      - ENVIRONMENT=development
    # Mount source code for development (hot reload)
    # volumes:
    #   - .:/app
    #   - /app/venv  # Exclude venv from mount
    ports:
      - "8000:8000"
